<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Activitys.TermekOldalActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Activitys.TermekOldalActivity">

        <ImageView
            android:id="@+id/kep2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:animateLayoutChanges="true"
            android:contentDescription="@string/bolt_kepe"
            android:foreground="#A3000000"
            android:scaleType="center"
            android:src="@drawable/standard_item_picture"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_scrollFlags="scroll|exitUntilCollapsed" />

        <TextView
            android:id="@+id/termekNeveBolt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Termék neve"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kep2"
            app:layout_constraintVertical_bias=".037" />

        <TextView
            android:id="@+id/termekSulyBolt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Termék súlya"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/termekNeveBolt"
            app:layout_constraintVertical_bias="0.077" />

        <TextView
            android:id="@+id/termekAraBolt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Termék Ára"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/termekSulyBolt"
            app:layout_constraintVertical_bias="0.077" />

        <TextView
            android:id="@+id/termekMaxRendelheto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Termék Ára"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/termekAraBolt"
            app:layout_constraintVertical_bias="0.077" />

        <LinearLayout
            android:id="@+id/rendelenoMennyisegLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/termekMaxRendelheto"
            app:layout_constraintVertical_bias="0.137">

            <TextView
                android:id="@+id/maxMennyisegLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nev_modositas"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/rendelendoMennyiseg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:autofillHints="name"
                android:backgroundTint="@color/purple_500"
                android:ems="10"
                android:hint="Rendelenő mennyiség (kg)"
                android:inputType="textPersonName"
                app:cornerRadius="10dp" />

        </LinearLayout>

        <Button
            android:layout_width="204dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:text="Kosárba"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rendelenoMennyisegLayout"
            app:layout_constraintVertical_bias="0.237" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>